{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],          // đủ cho các tính năng JS hiện đại
    "types": ["node"],           // <-- thêm dòng này để TS nhận console/process
    "outDir": "./dist",
    "rootDir": "..",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["./**/*.ts", "../types.ts"],
  "exclude": ["node_modules"]
}
